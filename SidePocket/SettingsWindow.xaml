<Window x:Class="SidePocket.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SidePocket 设置" Height="430" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="True">
    <Border x:Name="RootBorder" CornerRadius="12" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="10" RenderTransformOrigin="0.5,0.5">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
                <TranslateTransform Y="0"/>
            </TransformGroup>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect x:Name="RootShadow" BlurRadius="20" ShadowDepth="2" Opacity="0.25"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title Bar Area -->
            <Grid Background="Transparent" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
                <TextBlock Text="快捷键设置" FontSize="12" Margin="16,12,0,12" Foreground="{DynamicResource HeaderTextBrush}" VerticalAlignment="Center"/>
                <Button Content="" FontFamily="Segoe MDL2 Assets" FontSize="10" Background="Transparent" BorderThickness="0" 
                        Foreground="{DynamicResource MainTextBrush}"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0" Width="45" Height="32"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="0,11,0,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#F1707A"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Content Area -->
            <StackPanel Grid.Row="1" Margin="20,0,20,20">
                <TextBlock x:Name="TitleText" Text="设置" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource MainTextBrush}" RenderTransformOrigin="0,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform X="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="SubTitleText" Text="使用快捷键快速将当前激活的窗口收纳到屏幕边缘。" FontSize="13" Foreground="{DynamicResource SubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,24"/>

                <Border x:Name="SettingsCard" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="8" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="16">
                    <Border.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="2" Opacity="0.05"/>
                    </Border.Effect>
                    <StackPanel>
                        <DockPanel Margin="0,0,0,16">
                            <TextBlock Text="收纳当前窗口" VerticalAlignment="Center" DockPanel.Dock="Left" Foreground="{DynamicResource MainTextBrush}"/>
                            <Border x:Name="PocketHotKeyRecorder" Background="{DynamicResource RecorderBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" 
                                    HorizontalAlignment="Right" Padding="10,6" MinWidth="160" Cursor="Hand" Tag="Pocket"
                                    Focusable="True" MouseLeftButtonDown="HotKeyRecorder_MouseLeftButtonDown"
                                    PreviewKeyDown="HotKeyRecorder_PreviewKeyDown" LostFocus="HotKeyRecorder_LostFocus">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#0067C0"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock x:Name="PocketHotKeyDisplay" Text="Win + ~" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainTextBrush}"/>
                            </Border>
                        </DockPanel>
                        <DockPanel>
                            <TextBlock Text="恢复上一个窗口" VerticalAlignment="Center" DockPanel.Dock="Left" Foreground="{DynamicResource MainTextBrush}"/>
                            <Border x:Name="RestoreHotKeyRecorder" Background="{DynamicResource RecorderBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="6" 
                                    HorizontalAlignment="Right" Padding="10,6" MinWidth="160" Cursor="Hand" Tag="Restore"
                                    Focusable="True" MouseLeftButtonDown="HotKeyRecorder_MouseLeftButtonDown"
                                    PreviewKeyDown="HotKeyRecorder_PreviewKeyDown" LostFocus="HotKeyRecorder_LostFocus">
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#0067C0"/>
                                                <Setter Property="BorderThickness" Value="2"/>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock x:Name="RestoreHotKeyDisplay" Text="Win + Shift + ~" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainTextBrush}"/>
                            </Border>
                        </DockPanel>

                        <Rectangle Height="1" Fill="{DynamicResource BorderBrush}" Margin="0,16"/>

                        <DockPanel>
                            <TextBlock Text="开机启动" VerticalAlignment="Center" DockPanel.Dock="Left" Foreground="{DynamicResource MainTextBrush}"/>
                            <CheckBox x:Name="AutoStartCheck" HorizontalAlignment="Right" VerticalAlignment="Center" Click="AutoStart_Click" Style="{StaticResource FluentCheckBoxStyle}"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
                
                <Button Content="重置所有设置" Margin="0,16,0,0" HorizontalAlignment="Left" Padding="8,4" Click="Reset_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#0067C0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0D0067C0"/>
                                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1A0067C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Bottom Actions -->
            <Border Grid.Row="2" Background="{DynamicResource HoverBackgroundBrush}" CornerRadius="0,0,12,12" Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="保存" Click="Save_Click" Style="{StaticResource PrimaryButtonStyle}" Margin="0,0,12,0" Width="80"/>
                    <Button Content="取消" Click="Cancel_Click" Style="{StaticResource SecondaryButtonStyle}" Width="80"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- 窗口入场 -->
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" From="0.85" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <BackEase Amplitude="0.4" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" From="0.85" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <BackEase Amplitude="0.4" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <!-- 标题动画 -->
                    <DoubleAnimation Storyboard.TargetName="TitleText" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="-30" To="0" Duration="0:0:0.6">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="SubTitleText" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8"/>

                    <!-- 内容卡片动画 -->
                    <DoubleAnimation Storyboard.TargetName="SettingsCard" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.6"/>
                    <ThicknessAnimation Storyboard.TargetName="SettingsCard" Storyboard.TargetProperty="Margin" From="0,30,0,-30" To="0" Duration="0:0:0.6">
                        <ThicknessAnimation.EasingFunction>
                            <QuarticEase EasingMode="EaseOut"/>
                        </ThicknessAnimation.EasingFunction>
                    </ThicknessAnimation>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
