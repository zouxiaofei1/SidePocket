<Window x:Class="SidePocket.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SidePocket 设置" Height="430" Width="400"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        WindowStartupLocation="CenterScreen" ShowInTaskbar="True">
    
    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <!-- 窗口入场 -->
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.4"/>
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" From="0.85" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <BackEase Amplitude="0.4" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="RootBorder" Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" From="0.85" To="1" Duration="0:0:0.5">
                        <DoubleAnimation.EasingFunction>
                            <BackEase Amplitude="0.4" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>

                    <!-- 标题动画 -->
                    <DoubleAnimation Storyboard.TargetName="TitleText" Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)" From="-30" To="0" Duration="0:0:0.6">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="SubTitleText" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.8"/>

                    <!-- 内容卡片动画 -->
                    <DoubleAnimation Storyboard.TargetName="SettingsCard" Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.6"/>
                    <ThicknessAnimation Storyboard.TargetName="SettingsCard" Storyboard.TargetProperty="Margin" From="0,30,0,-30" To="0" Duration="0:0:0.6">
                        <ThicknessAnimation.EasingFunction>
                            <QuarticEase EasingMode="EaseOut"/>
                        </ThicknessAnimation.EasingFunction>
                    </ThicknessAnimation>

                    <!-- 背景背景浮动动画 -->
                    <DoubleAnimation Storyboard.TargetName="BgEllipse1Trans" Storyboard.TargetProperty="X" From="-20" To="20" Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>
                    <DoubleAnimation Storyboard.TargetName="BgEllipse1Trans" Storyboard.TargetProperty="Y" From="-20" To="20" Duration="0:0:7" AutoReverse="True" RepeatBehavior="Forever"/>
                    <DoubleAnimation Storyboard.TargetName="BgEllipse2Trans" Storyboard.TargetProperty="X" From="20" To="-20" Duration="0:0:6" AutoReverse="True" RepeatBehavior="Forever"/>
                    <DoubleAnimation Storyboard.TargetName="BgEllipse2Trans" Storyboard.TargetProperty="Y" From="10" To="-10" Duration="0:0:5" AutoReverse="True" RepeatBehavior="Forever"/>
                    <DoubleAnimation Storyboard.TargetName="BgEllipse3Trans" Storyboard.TargetProperty="Y" From="-30" To="30" Duration="0:0:8" AutoReverse="True" RepeatBehavior="Forever"/>
                    
                    <!-- 浮动装饰物动画 -->
                    <DoubleAnimation Storyboard.TargetName="FloatingShape1" Storyboard.TargetProperty="Angle" From="0" To="360" Duration="0:0:20" RepeatBehavior="Forever"/>
                    <DoubleAnimation Storyboard.TargetName="FloatingShape2" Storyboard.TargetProperty="ScaleX" From="0.8" To="1.2" Duration="0:0:4" AutoReverse="True" RepeatBehavior="Forever"/>
                    <DoubleAnimation Storyboard.TargetName="FloatingShape2" Storyboard.TargetProperty="ScaleY" From="0.8" To="1.2" Duration="0:0:4" AutoReverse="True" RepeatBehavior="Forever"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>

    <Border x:Name="RootBorder" CornerRadius="12" Background="{DynamicResource WindowBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="15" RenderTransformOrigin="0.5,0.5" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform ScaleX="1" ScaleY="1"/>
                <TranslateTransform Y="0"/>
            </TransformGroup>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect x:Name="RootShadow" BlurRadius="30" ShadowDepth="0" Opacity="0.4" Color="#0078D4"/>
        </Border.Effect>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 裁剪后的背景装饰层 -->
            <Border Grid.RowSpan="3" CornerRadius="11" ClipToBounds="True">
                <Canvas IsHitTestVisible="False">
                    <!-- 动态渐变光晕 -->
                    <Ellipse Width="400" Height="400" Canvas.Top="-200" Canvas.Left="-150" Fill="{DynamicResource AccentGradientBrush}" Opacity="0.12">
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="BgEllipse1Trans" X="0" Y="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Width="350" Height="350" Canvas.Bottom="-150" Canvas.Right="-100" Fill="{DynamicResource PrimaryGradientBrush}" Opacity="0.1">
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="BgEllipse2Trans" X="0" Y="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    <Ellipse Width="200" Height="200" Canvas.Top="120" Canvas.Right="-80" Fill="{DynamicResource SuccessGradientBrush}" Opacity="0.08">
                        <Ellipse.RenderTransform>
                            <TranslateTransform x:Name="BgEllipse3Trans" X="0" Y="0"/>
                        </Ellipse.RenderTransform>
                    </Ellipse>
                    
                    <!-- 浮动装饰物 -->
                    <Path Data="M10,0 L20,20 L0,20 Z" Fill="{DynamicResource PrimaryGradientBrush}" Opacity="0.05" Canvas.Left="50" Canvas.Top="100">
                        <Path.RenderTransform>
                            <RotateTransform x:Name="FloatingShape1" Angle="0" CenterX="10" CenterY="10"/>
                        </Path.RenderTransform>
                    </Path>
                    <Path Data="M0,10 A10,10 0 1,1 20,10 A10,10 0 1,1 0,10" Fill="{DynamicResource AccentGradientBrush}" Opacity="0.05" Canvas.Right="40" Canvas.Bottom="120">
                        <Path.RenderTransform>
                            <ScaleTransform x:Name="FloatingShape2" ScaleX="1" ScaleY="1" CenterX="10" CenterY="10"/>
                        </Path.RenderTransform>
                    </Path>
                </Canvas>
            </Border>

            <!-- Title Bar Area -->
            <Grid Grid.Row="0" Background="Transparent">
                <TextBlock Text="快捷键设置" FontSize="12" Margin="16,12,0,12" Foreground="{DynamicResource HeaderTextBrush}" VerticalAlignment="Center"/>
                <Button Content="" FontFamily="Segoe MDL2 Assets" FontSize="10" Background="Transparent" BorderThickness="0" 
                        Foreground="{DynamicResource MainTextBrush}"
                        HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,4,0" Width="45" Height="32"
                        Click="Close_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="0,11,0,0">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#E81123"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#F1707A"/>
                                    <Setter Property="Foreground" Value="White"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </Grid>

            <!-- Content Area -->
            <StackPanel Grid.Row="1" Margin="20,0,20,20">
                <TextBlock x:Name="TitleText" Text="设置" FontSize="28" FontWeight="SemiBold" Margin="0,0,0,8" Foreground="{DynamicResource MainTextBrush}" RenderTransformOrigin="0,0.5">
                    <TextBlock.RenderTransform>
                        <TranslateTransform X="0"/>
                    </TextBlock.RenderTransform>
                </TextBlock>
                <TextBlock x:Name="SubTitleText" Text="使用快捷键快速将当前激活的窗口收纳到屏幕边缘。" FontSize="13" Foreground="{DynamicResource SubTextBrush}" TextWrapping="Wrap" Margin="0,0,0,24"/>

                <Border x:Name="SettingsCard" Background="{DynamicResource CardBackgroundBrush}" CornerRadius="12" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Padding="20" RenderTransformOrigin="0.5,0.5">
                    <Border.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform ScaleX="1" ScaleY="1"/>
                            <TranslateTransform Y="0"/>
                        </TransformGroup>
                    </Border.RenderTransform>
                    <Border.Effect>
                        <DropShadowEffect x:Name="CardShadow" BlurRadius="15" ShadowDepth="0" Opacity="0.1"/>
                    </Border.Effect>
                    <Border.Style>
                        <Style TargetType="Border">
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Trigger.EnterActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1.01" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1.01" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.2" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="25" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.EnterActions>
                                    <Trigger.ExitActions>
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(TransformGroup.Children)[0].(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.Opacity" To="0.1" Duration="0:0:0.3"/>
                                                <DoubleAnimation Storyboard.TargetProperty="Effect.BlurRadius" To="15" Duration="0:0:0.3"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </Trigger.ExitActions>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Border.Style>
                    <StackPanel>
                        <DockPanel Margin="0,0,0,20">
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <Path Data="M21,16.5C21,16.88 20.79,17.21 20.47,17.38L12.57,21.82C12.41,21.94 12.21,22 12,22C11.79,22 11.59,21.94 11.43,21.82L3.53,17.38C3.21,17.21 3,16.88 3,16.5V7.5C3,7.12 3.21,6.79 3.53,6.62L11.43,2.18C11.59,2.06 11.79,2 12,2C12.21,2 12.41,2.06 12.57,2.18L20.47,6.62C20.79,6.79 21,7.12 21,7.5V16.5M12,4.15L6.04,7.5L12,10.85L17.96,7.5L12,4.15M5,15.91L11,19.29V12.58L5,9.21V15.91M19,15.91V9.21L13,12.58V19.29L19,15.91Z" Fill="{DynamicResource PrimaryGradientBrush}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="收纳当前窗口" VerticalAlignment="Center" Foreground="{DynamicResource MainTextBrush}" FontWeight="Medium"/>
                            </StackPanel>
                            <Border x:Name="PocketHotKeyRecorder" Background="{DynamicResource RecorderBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" 
                                    HorizontalAlignment="Right" Padding="12,8" MinWidth="160" Cursor="Hand" Tag="Pocket"
                                    Focusable="True" MouseLeftButtonDown="HotKeyRecorder_MouseLeftButtonDown"
                                    PreviewKeyDown="HotKeyRecorder_PreviewKeyDown" LostFocus="HotKeyRecorder_LostFocus"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#0067C0"/>
                                                <Setter Property="BorderThickness" Value="1.5"/>
                                                <Setter Property="Background" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#0067C0"/>
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.02" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.02" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock x:Name="PocketHotKeyDisplay" Text="Win + ~" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainTextBrush}" FontSize="13"/>
                            </Border>
                        </DockPanel>
                        <DockPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <Path Data="M13,3H19V9H17V6.41L13.41,10L12,8.59L15.59,5H13V3M9,13H3V19H5V16.41L8.59,20L10,18.59L6.41,15H9V13Z" Fill="{DynamicResource PrimaryGradientBrush}" Width="18" Height="18" Stretch="Uniform" Margin="0,0,12,0" VerticalAlignment="Center"/>
                                <TextBlock Text="恢复上一个窗口" VerticalAlignment="Center" Foreground="{DynamicResource MainTextBrush}" FontWeight="Medium"/>
                            </StackPanel>
                            <Border x:Name="RestoreHotKeyRecorder" Background="{DynamicResource RecorderBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" CornerRadius="8" 
                                    HorizontalAlignment="Right" Padding="12,8" MinWidth="160" Cursor="Hand" Tag="Restore"
                                    Focusable="True" MouseLeftButtonDown="HotKeyRecorder_MouseLeftButtonDown"
                                    PreviewKeyDown="HotKeyRecorder_PreviewKeyDown" LostFocus="HotKeyRecorder_LostFocus"
                                    RenderTransformOrigin="0.5,0.5">
                                <Border.RenderTransform>
                                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                                </Border.RenderTransform>
                                <Border.Style>
                                    <Style TargetType="Border">
                                        <Style.Triggers>
                                            <Trigger Property="IsFocused" Value="True">
                                                <Setter Property="BorderBrush" Value="#0067C0"/>
                                                <Setter Property="BorderThickness" Value="1.5"/>
                                                <Setter Property="Background" Value="White"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter Property="BorderBrush" Value="#0067C0"/>
                                                <Trigger.EnterActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.02" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.02" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.EnterActions>
                                                <Trigger.ExitActions>
                                                    <BeginStoryboard>
                                                        <Storyboard>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.0" Duration="0:0:0.2"/>
                                                            <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.0" Duration="0:0:0.2"/>
                                                        </Storyboard>
                                                    </BeginStoryboard>
                                                </Trigger.ExitActions>
                                            </Trigger>
                                        </Style.Triggers>
                                    </Style>
                                </Border.Style>
                                <TextBlock x:Name="RestoreHotKeyDisplay" Text="Win + Shift + ~" HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="{DynamicResource MainTextBrush}" FontSize="13"/>
                            </Border>
                        </DockPanel>

                        <Rectangle Height="1" Fill="{DynamicResource BorderBrush}" Margin="0,16"/>

                        <DockPanel>
                            <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                                <Path Data="M7,2V13H10V22L17,10H13L17,2H7Z" Fill="{DynamicResource PrimaryGradientBrush}" Width="16" Height="16" Stretch="Uniform" Margin="1,0,13,0" VerticalAlignment="Center"/>
                                <TextBlock Text="开机启动" VerticalAlignment="Center" Foreground="{DynamicResource MainTextBrush}" FontWeight="Medium"/>
                            </StackPanel>
                            <CheckBox x:Name="AutoStartCheck" HorizontalAlignment="Right" VerticalAlignment="Center" Click="AutoStart_Click" Style="{StaticResource FluentCheckBoxStyle}"/>
                        </DockPanel>
                    </StackPanel>
                </Border>
                
                <Button Content="重置所有设置" Margin="0,16,0,0" HorizontalAlignment="Left" Padding="8,4" Click="Reset_Click">
                    <Button.Style>
                        <Style TargetType="Button">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Foreground" Value="#0067C0"/>
                            <Setter Property="BorderThickness" Value="0"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="Button">
                                        <Border Background="{TemplateBinding Background}" CornerRadius="4" Padding="{TemplateBinding Padding}">
                                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                        </Border>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                            <Style.Triggers>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="#0D0067C0"/>
                                    <Setter Property="TextBlock.TextDecorations" Value="Underline"/>
                                </Trigger>
                                <Trigger Property="IsPressed" Value="True">
                                    <Setter Property="Background" Value="#1A0067C0"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Button.Style>
                </Button>
            </StackPanel>

            <!-- Bottom Actions -->
            <Border Grid.Row="2" Background="{DynamicResource HoverBackgroundBrush}" CornerRadius="0,0,12,12" Padding="20,16">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="确定" Click="Cancel_Click" Style="{StaticResource PrimaryButtonStyle}" Width="80"/>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
