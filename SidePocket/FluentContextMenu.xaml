<Window x:Class="SidePocket.FluentContextMenu"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None" AllowsTransparency="True" Background="Transparent"
        Topmost="True" ShowInTaskbar="False"
        Width="160" SizeToContent="Height"
        Deactivated="Window_Deactivated">
    <Border x:Name="MainBorder" CornerRadius="12" Background="{DynamicResource CardBackgroundBrush}" BorderBrush="{DynamicResource BorderBrush}" BorderThickness="1" Margin="10" RenderTransformOrigin="0.5,0">
        <Border.RenderTransform>
            <TransformGroup>
                <ScaleTransform x:Name="MenuScale" ScaleX="1" ScaleY="1"/>
                <TranslateTransform x:Name="MenuTranslate" Y="0"/>
            </TransformGroup>
        </Border.RenderTransform>
        <Border.Effect>
            <DropShadowEffect BlurRadius="25" ShadowDepth="0" Opacity="0.3" Color="#0078D4"/>
        </Border.Effect>
        <StackPanel Margin="6">
            <Grid Height="80">
                <!-- 动态微光 -->
                <Ellipse Width="60" Height="60" Fill="{DynamicResource AccentGradientBrush}" Opacity="0.15">
                    <Ellipse.RenderTransform>
                        <ScaleTransform x:Name="GlowScale" CenterX="30" CenterY="30" ScaleX="1" ScaleY="1"/>
                    </Ellipse.RenderTransform>
                </Ellipse>
                <Image Source="pack://application:,,,/resources/icon.png" Width="48" Height="48" 
                       HorizontalAlignment="Center" Cursor="Hand" 
                       MouseLeftButtonDown="Logo_MouseLeftButtonDown">
                    <Image.RenderTransform>
                        <ScaleTransform x:Name="LogoScale" ScaleX="1" ScaleY="1"/>
                    </Image.RenderTransform>
                    <Image.Triggers>
                        <EventTrigger RoutedEvent="MouseEnter">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LogoScale" Storyboard.TargetProperty="ScaleX" To="1.1" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetName="LogoScale" Storyboard.TargetProperty="ScaleY" To="1.1" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                        <EventTrigger RoutedEvent="MouseLeave">
                            <BeginStoryboard>
                                <Storyboard>
                                    <DoubleAnimation Storyboard.TargetName="LogoScale" Storyboard.TargetProperty="ScaleX" To="1.0" Duration="0:0:0.2"/>
                                    <DoubleAnimation Storyboard.TargetName="LogoScale" Storyboard.TargetProperty="ScaleY" To="1.0" Duration="0:0:0.2"/>
                                </Storyboard>
                            </BeginStoryboard>
                        </EventTrigger>
                    </Image.Triggers>
                </Image>
            </Grid>
            <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
            <Button Style="{StaticResource MenuButtonStyle}" Click="RestoreAll_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M13,3H19V9H17V6.41L13.41,10L12,8.59L15.59,5H13V3M9,13H3V19H5V16.41L8.59,20L10,18.59L6.41,15H9V13Z" Fill="{DynamicResource MainTextBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                    <TextBlock Text="还原所有窗口"/>
                </StackPanel>
            </Button>
            <Button Style="{StaticResource MenuButtonStyle}" Click="Settings_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11.03L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.97 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.97 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11.03C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.95C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.68 16.04,18.34 16.56,17.95L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z" Fill="{DynamicResource MainTextBrush}" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                    <TextBlock Text="设置"/>
                </StackPanel>
            </Button>
            <Separator Background="{DynamicResource BorderBrush}" Margin="8,4"/>
            <Button Style="{StaticResource MenuButtonStyle}" Click="Exit_Click">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M14.08,15.59L16.67,13H7V11H16.67L14.08,8.41L15.5,7L20.5,12L15.5,17L14.08,15.59M19,3A2,2 0 0,1 21,5V9.67L19,7.67V5H5V19H19V16.33L21,14.33V19A2,2 0 0,1 19,21H5C3.89,21 3,20.1 3,19V5C3,3.89 3.89,3 5,3H19Z" Fill="#E81123" Width="16" Height="16" Stretch="Uniform" Margin="0,0,10,0"/>
                    <TextBlock Text="退出" Foreground="#E81123"/>
                </StackPanel>
            </Button>
        </StackPanel>
    </Border>

    <Window.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard>
                <Storyboard>
                    <DoubleAnimation Storyboard.TargetName="MenuScale" Storyboard.TargetProperty="ScaleX" From="0.8" To="1" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <BackEase Amplitude="0.5" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="MenuScale" Storyboard.TargetProperty="ScaleY" From="0.8" To="1" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <BackEase Amplitude="0.5" EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetName="MenuTranslate" Storyboard.TargetProperty="Y" From="-20" To="0" Duration="0:0:0.3">
                        <DoubleAnimation.EasingFunction>
                            <CubicEase EasingMode="EaseOut"/>
                        </DoubleAnimation.EasingFunction>
                    </DoubleAnimation>
                    <DoubleAnimation Storyboard.TargetProperty="Opacity" From="0" To="1" Duration="0:0:0.2"/>
                    
                    <!-- 菜单顶部图标微光动画 -->
                    <DoubleAnimation Storyboard.TargetName="GlowScale" Storyboard.TargetProperty="ScaleX" From="1" To="1.2" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever"/>
                    <DoubleAnimation Storyboard.TargetName="GlowScale" Storyboard.TargetProperty="ScaleY" From="1" To="1.2" Duration="0:0:2" AutoReverse="True" RepeatBehavior="Forever"/>
                </Storyboard>
            </BeginStoryboard>
        </EventTrigger>
    </Window.Triggers>
</Window>
